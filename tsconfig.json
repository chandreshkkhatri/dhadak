{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "lib": [
        "esnext"
      ],
      "jsx": "react-native",
      "strict": true,
      "noEmit": true,
      "isolatedModules": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "baseUrl": "./",
      "paths": {
        "~/*": [
          "./*"
        ],
        "@/*": [
          "./*"
        ]
      }
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ],
    "extends": "expo/tsconfig.base"
  }
  